<% include ../partials/header.ejs %>

  <!--external-->
  <script type='text/javascript' src='https://cdnjs.cloudflare.com/ajax/libs/animejs/2.2.0/anime.min.js'></script>
  <script type='text/javascript' src='https://semantic-ui.com/javascript/library/tablesort.js'></script>

  <!--internal-->
  <link rel='stylesheet' type='text/css' href='stylesheets/media.css'>
  <script type='text/javascript' src='scripts/media.js'></script>
  
  <span id='mediaJSON' hidden>
    <%- JSON.stringify(page.media) %>
  </span>
  
  <div id='page'>
    
    <div id='media' class='ui raised segment'>
      
      <div id='youtube_video' class="ui embed" data-source="youtube"></div>
      
    </div>
    
    <div id='menu' class='ui raised segment'>
      
      <div id='breadcrumbs' class="ui three mini unstackable steps">
        <div class="step" id='crumb_categories'>
          <i class="th list icon"></i>
          <div class="content">
            <div class="title">Categories</div>
          </div>
        </div>
        <div class="step" id='crumb_category' category=''>
          <i class="square full icon"></i>
          <div class="content">
            <div class="title" id='crumb_category_content'></div>
          </div>
        </div>
        <div class="active step" id='crumb_media' category='' _id=''>
          <i class="file icon"></i>
          <div class="content">
            <div class="title" id='crumb_media_content'></div>
          </div>
        </div>
      </div>
      
      <div id='section_categories'>
        <div id='categories_container'>
          <div id='start_category' class='category' category='start'>
            <h1>
              Start
            </h1>
            <hr>
            <p>
              Get started off on what this thing is really all about.
            </p>
          </div>
          <div id='tour_category' class='category' category='tour'>
            <h2 class='text-right'>
              Tour
            </h2>
            <hr>
            <div class="ui list">
              <div class="item">
                <i class="help icon"></i>
                <div class="content">
                  <div class="header">Basics</div>
                  <div class="description">What is this website?</div>
                </div>
              </div>
              <div class="item">
                <i class="help icon icon"></i>
                <div class="content">
                  <div class="header">Features</div>
                  <div class="description">What does it have?</div>
                </div>
              </div>
              <div class="item">
                <i class="help icon"></i>
                <div class='content'>
                  <div class='header'>Extras</div>
                  <div class='description'>What else?</div>
                </div>
              </div>
            </div>
          </div>
          <div id='development_category' class='category' category='development'>
            <h2 class='text-center'>
              Development
            </h2>
            <hr>
            <div>
              The ins and outs, inner workings, algorithms, design decisions, the development
              of this website
            </div>
          </div>
          <div id='youtube_category' class='category' category='youtube'>
            <h1 class='ui header'>
              YouTube
            </h1>
            <h3 class='ui header'>
              Jesus, tacos, and coding.
            </h3>
          </div>
        </div>
      </div>
      
      <div id='section_category'>
        
      </div>
      
      <div id='section_media'>

      </div>
      
    </div>
    
    <div id='info' class='ui raised segment'>
      
      <div id='info_actions' class='row'>
        <div id='prev' class='col-4'>
          <i class='fa fa-backward'></i>
        </div>
        <div id='replay' class='col-4'>
          <i class='fa fa-retweet'></i>
        </div>
        <div id='next' class='col-4'>
          <i class='fa fa-forward'></i>
        </div>
      </div>
      
      <div id='info_progress'>
        
      </div>
      
      <div id='info_basic'>
        <h1 id='info_title'>
          
        </h1>
      </div>
      
      <div id='info_stats' class='row justify-items-center align-items-center'>
        <div id='info_views' class='col-6'>
          
        </div>
        <div id='info_likes' class='col-6'>
        
        </div>
      </div>
      
    </div>
    
  </div>

<% include ../partials/footer.ejs %>